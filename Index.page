<script>
    function connect() {
        let deviceId = $('#connect-id').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data =  {
            id: deviceId,
            method: 'connect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="paired"]:checked').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data =  {
            id: selectedDeviceId,
            method: 'disconnect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {
            if(response != null) {
                $(`input[value="${response}"]`).parent().remove();
            }

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function updateAvailableDevices() {
        let deviceList = $('#devices');
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data =  {
            method: 'devices'
        };

        $.post(url, data, (response) => {
            let availableDevices = JSON.parse(response);

            availableDevices.forEach((availableDevice) => {
                let device = availableDevice.split(" ");
                let deviceId = device[1];
                let deviceName = device.slice(2).join(" ");
                let deviceExists = $(`input[value="${deviceId}"]`).length > 0;

                if(!deviceExists) {
                    deviceList.append(`<li>
                        <input type="radio" name="paired" value="${deviceId}" />
                        <span>${deviceName} (${deviceId})</span>
                    </li>`);
                }
            });
        });
    }

    function enableScan() {
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data =  {
            state: true,
            method: 'scan'
        };


        $.post(url, data, (response) => {
        });
    }

    $(function() {
        enableScan();
        //on page close disable scan

        updateAvailableDevices();

        setInterval(() => {
            updateAvailableDevices();
        }, 3000);

        $('input[type="radio"]').on('click', (event) => {
            let radio = $(event.currentTarget);

            if(radio.hasClass('checked')) {
                $('#disconnect').hide();

                radio
                    .prop('checked', false)
                    .removeClass('checked');
            }
            else {
                $('#disconnect').show();

                radio
                    .prop('checked', true)
                    .addClass('checked');
            }
        });
    });
</script>