    <div class="row">
        <button id="disconnect" type="button" onclick="disconnect();" style="display:none;">Disconnect</button>
    </div>
    <div class="btm-output"></div>
</div>

<script>
    function connect() {
        $('div.spinner').show();

        $.get('/plugins/<?= $btmName ?>/include/Scan.php', (data) => {
            $('div.spinner').hide();

            $('.btm-output').html(data);
        });
    }

    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="devices"]:checked').val();

        console.log(selectedDeviceId);
    }

    $(function() {
        $('input[type="radio"]').on('change', (event) => {
            let radio = $(event.currentTarget);

            if(radio.hasClass('checked')) {
                $('#disconnect').hide();
                
                radio
                    .prop('checked', false)
                    .removeClass('checked');
            }
            else {
                $('#disconnect').show();
                
                radio
                    .prop('checked', true)
                    .addClass('checked');
            }
        });
    });
</script>