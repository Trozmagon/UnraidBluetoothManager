    </div>
</div>

<script>
    function connect() {
        let deviceId = $('#connect-id').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            id: deviceId,
            method: 'connect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="paired"]:checked').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            id: selectedDeviceId,
            method: 'disconnect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {
            if (response != null) {
                $(`input[value="${response}"]`).parent().remove();
            }

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function detectDevices() {
        let pairedDeviceList = $('#paired-devices');
        let availableDeviceList = $('#available-devices');
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            method: 'devices'
        };

        $.get(url, data, (response) => {
            let detectedDevices = JSON.parse(response);

            detectedDevices.forEach((availableDevice) => {
                let device = availableDevice.split(" ");
                let deviceId = device[1];
                let deviceName = device.slice(2).join(" ");
                let deviceExists = $(`input[value="${deviceId}"]`).length > 0;
                let deviceConnected = "disconnected";

                if (!deviceExists) {
                    pairedDeviceList.append(`<li>
                        <button class="${deviceConnected}" type="button" onclick="selectDevice(event)">
                            <input type="radio" name="paired" value="${deviceId}" />
                            <span>${deviceName} (${deviceId})</span>
                            <i class="fa-solid fa-circle"></i>
                        </button>
                    </li>`);
                }
            });
        });
    }

    function enableScan() {
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            state: true,
            method: 'scan'
        };

        $.get(url, data, (response) => {
        });
    }

    function selectDevice(event) {
        let button = $(event.currentTarget);
        let radio = button.find('input');

        if (radio.hasClass('checked')) {
            $('#disconnect').hide();

            radio
                .prop('checked', false)
                .removeClass('checked');
        }
        else {
            $('#disconnect').show();

            radio
                .prop('checked', true)
                .addClass('checked');
        }
    }

    $(function () {
        enableScan();
        //on page close disable scan

        detectDevices();

        setInterval(() => {
            detectDevices();
        }, 3000);
    });
</script>