<script>
    function connect() {
        let deviceId = $('#connect-id').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            id: deviceId,
            method: 'connect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="paired"]:checked').val();
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            id: selectedDeviceId,
            method: 'disconnect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {
            if (response != null) {
                $(`input[value="${response}"]`).parent().remove();
            }

            alert(`${response}`);

            $('div.spinner').hide();
        });
    }

    function detectDevices() {
        let pairedDeviceList = $('#paired-devices');
        let availableDeviceList = $('#available-devices');
        let detectDevicesUrl = '/plugins/<?= $btmName ?>/include/Functions.php'
        let detectDevicesRequest = {
            method: 'devices'
        };

        $.get(detectDevicesUrl, detectDevicesRequest, (response) => {
            let detectedDevices = JSON.parse(response);

            detectedDevices.forEach((detectedDevice) => {
                let device = detectedDevice.split(" ");
                let deviceId = device[1];
                let deviceName = device.slice(2).join(" ");
                let deviceExists = $(`input[value="${deviceId}"]`).length > 0;

                if (!deviceExists) {
                    let deviceInfoUrl = '/plugins/<?= $btmName ?>/include/Functions.php'
                    let deviceInfoRequest = {
                        id: deviceId,
                        method: 'deviceinfo'
                    };

                    $.get(deviceInfoUrl, deviceInfoRequest, (response) => {
                        let deviceStatus = "disconnected";

                        pairedDeviceList.append(`
                            <li class="${deviceConnected}" onclick="toggleDeviceSelection(event)">
                                <span class="status"></span>
                                <input type="radio" name="paired" value="${deviceId}" />
                                <span class="name">${deviceName} (${deviceId})</span>
                            </li>`);
                    });
                }
            });
        });
    }

    function enableScan() {
        let url = '/plugins/<?= $btmName ?>/include/Functions.php'
        let data = {
            state: true,
            method: 'scan'
        };

        $.get(url, data, (response) => {
        });
    }

    function toggleDeviceSelection(event) {
        let button = $(event.currentTarget);
        let radio = button.find('input');

        if (radio.hasClass('checked')) {
            $('#disconnect').hide();

            radio
                .prop('checked', false)
                .removeClass('checked');
        }
        else {
            $('#disconnect').show();

            radio
                .prop('checked', true)
                .addClass('checked');
        }
    }

    $(function () {
        enableScan();
        window.onbeforeunload = () => {
            //on page close disable scan
        }

        detectDevices();

        setInterval(() => {
            detectDevices();
        }, 3000);
    });
</script>