                    $deviceName = join(" ", array_slice($device, 2));

                    echo '<li><input type="radio" name="devices" value="' . $deviceId . '" /><span>' . $deviceName . ' (' . $deviceId . ')' . '</span></li>';
                }
                ?>
            </ul>
