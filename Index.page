    function connect() {
        $('div.spinner').show();

        $.get('/plugins/<?= $btmName ?>/include/Scan.php', (data) => {
            $('div.spinner').hide();

            $('.btm-output').html(data);
        });
    }

    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="paired"]:checked').val();
        let url = '/plugins/<?= $btmName ?>/Index.page'
        let data =  { 
            id: selectedDeviceId,
            method: 'disconnect'
        };

        $('div.spinner').show();

        $.post(url, data, (response) => {
            $('div.spinner').hide();

            alert(`action performed successfully: ${response}`);
        });
    }

    $(function() {
        $('input[type="radio"]').on('click', (event) => {
            let radio = $(event.currentTarget);

            if(radio.hasClass('checked')) {
                $('#disconnect').hide();

                radio
                    .prop('checked', false)
                    .removeClass('checked');
            }
            else {
                $('#disconnect').show();

                radio
                    .prop('checked', true)
                    .addClass('checked');
            }
        });
    });
</script>