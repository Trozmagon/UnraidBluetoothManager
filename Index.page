<style>
    .btm-container {
        display: flex;
        flex-direction: column;
    }

        .btm-container row {
            flex: 1;
        }

    .btm-container {
        list-style-type:none;
        padding:0px;
        margin:0px;
    }
</style>

<div class="btm-container">
    <div class="row">
        <ul>
            <?php
            foreach ($connectedDevices as $connectedDevice) {
                $device = explode(" ", $connectedDevice);
                $deviceId = str_replace(":", "-", $device[1]);
                $deviceName = join(" ", array_slice($device, 2));

                echo '<li><input type="radio" name="devices" value="' . $deviceId . '" /><span>' . $deviceName . '</span></li>';
            }
            ?>
        </ul>
    </div>
    <div class="row">
        <button id="disconnect" type="button" onclick="disconnect();" style="display:none;">Disconnect</button>
    </div>
    <div class="btm-output"></div>
</div>

<script>
    function disconnect() {
        let selectedDeviceId = $('input[type="radio"][name="devices"]:checked').val().replace('-', ':')
        
        $('div.spinner').show();

        console.log(selectedDeviceId);

        $('div.spinner').hide();
    }

    $(function() {
        $('input[type="radio"]').on('change', (event) => {
            $('#disconnect').show();
        });
    });
</script>